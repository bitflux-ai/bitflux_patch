{
  "distros": {
    "ubuntu2004": {
      "build_style": "deb",
      "image_searchfactors": ["^linux-image-unsigned-", "generic$"],
      "ver_ref_pkg": "linux-image-unsigned",
      "pkg_filters": ["hwe", "cloud", "dkms", "tools", "buildinfo"],
      "metapkg_template": "linux-image-swaphints",
      "upload": {
        "repository": "apt__RELEASE__",
        "form": {
          "apt.asset": "__FILECONTENTS__"
        }
      }
    },
    "popos2004": {
      "build_style": "deb",
      "image_searchfactors": ["^linux-image-\\d.\\d+", "generic$"],
      "ver_ref_pkg": "linux-image-generic",
      "pkg_filters": ["hwe", "cloud", "dkms", "tools", "buildinfo"],
      "metapkg_template": "linux-image-swaphints"
    },
    "rockylinux8": {
      "build_style": "rpm",
      "upload": {
        "repository": "yum__RELEASE__",
        "form": {
          "yum.directory": "rocky/8/x86_64/",
          "yum.asset": "__FILECONTENTS__",
          "yum.asset.filename": "__FILENAME__"
        }
      }
    },
    "centos8": {
      "build_style": "rpm"
    },
    "fedora34": {
      "build_style": "rpm"
    }
  }
}
